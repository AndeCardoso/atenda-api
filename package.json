{
  "name": "atenda-api",
  "version": "1.0.0",
  "main": "server.ts",
  "author": "Anderson Cardoso",
  "license": "MIT",
  "scripts": {
    "dev": "npx nodemon --exec 'ts-node -r tsconfig-paths/register' ./src/server.ts --watch",
    "db": "docker compose up -d",
    "update-migration": "npx prisma migrate dev --name",
    "compile": "npx tsc && cp -R ./src/services/Nodemailer/templates/recoverMail/recover.ejs ./dist/services/Nodemailer/templates/recoverMail/",
    "start": "node ./dist/server.js"
  },
  "_moduleAliases": {
    "@root": ".",
    "@helper": "dist/helper",
    "@errors": "dist/errors",
    "@middlewares": "dist/middlewares",
    "@modules": "dist/modules",
    "@services": "dist/services",
    "@prismaClient": "dist/prismaClient",
    "@shared": "dist/shared",
    "@utils": "dist/utils",
    "@config": "dist/config",
    "@documentation": "dist/documentation"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.2",
    "openapi-types": "^12.1.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "prisma": "^5.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
