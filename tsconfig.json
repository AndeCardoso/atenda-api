{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@helper/*": ["helper/*"],
      "@errors/*": ["errors/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@prismaClient/*": ["prismaClient/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@documentation/*": ["documentation/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "ts-node": { "transpileOnly": true, "require": ["tsconfig-paths/register"] }
}